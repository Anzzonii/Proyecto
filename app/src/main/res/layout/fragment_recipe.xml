<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Imagen de la receta -->
        <ImageView
            android:id="@+id/img_receta"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            />

        <!-- Nombre, autor y nivel -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/txt_nombre_receta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre de la receta"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txt_autor_receta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Autor: Desconocido"
                android:textSize="16sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txt_nivel_receta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nivel: Fácil"
                android:textSize="16sp"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- Ingredientes -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingredientes"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:paddingTop="8dp" />

        <TextView
            android:id="@+id/txt_ingredientes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lista de ingredientes..."
            android:textSize="16sp"
            android:textColor="@color/black"
            android:paddingBottom="16dp" />

        <!-- Elaboración -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Elaboración"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:paddingTop="8dp" />

        <TextView
            android:id="@+id/txt_elaboracion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción de la elaboración..."
            android:textSize="16sp"
            android:textColor="@color/black"
            android:paddingBottom="16dp" />

    </LinearLayout>

</ScrollView>
